{%- from "fluent-bit/map.jinja" import fluent_bit with context -%}
[Unit]
Description=Fluent Bit
Requires=network.target
After=network.target

[Service]
Type=simple
ExecStart=/usr/local/bin/{{ fluent_bit.pkg }} -c /etc/{{ fluent_bit.pkg }}/{{ fluent_bit.pkg }}.conf -R /etc/{{ fluent_bit.pkg }}/parsers.conf
Restart=always

[Install]
WantedBy=multi-user.target
